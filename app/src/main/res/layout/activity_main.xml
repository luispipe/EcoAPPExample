<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#49BCEF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="35dp">

        <TextView
            android:id="@+id/tvEcoApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/app_name"
            android:textColor="#B90D64"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTodosU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Todos a la U 2023"
            android:textColor="#000000"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9AE9F4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Mensaje"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="200dp"
            android:layout_height="100dp" />

        <CheckBox
            android:id="@+id/cbMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listo"
            android:textColor="#000000" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2F1F5"
        android:gravity="center"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/swGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encender GPS"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar Foto"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:gravity="center"
        android:orientation="vertical">
        <Button

            android:id="@+id/btCompartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartir"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/img" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
